<head>
  <%= csrf_meta_tags %>
</head>
<style type="text/css">
.form-style-4{
	width: 450px;
	font-size: 16px;
	background: #56c744;
	padding: 30px 30px 15px 30px;
	border: 5px solid #53687E;
  border-radius: 50px;
}
.form-style-4 input[type=submit],
.form-style-4 input[type=button],
.form-style-4 input[type=text],
.form-style-4 input[type=text],
.form-style-4 textarea,
.form-style-4 label
{
	font-family: Georgia, "Times New Roman", Times, serif;
	font-size: 16px;
	color: #fff;

}
.form-style-4 label {
	display:block;
	margin-bottom: 10px;
}
.form-style-4 label > span{
	display: inline-block;
	float: left;
	width: 150px;
}
.form-style-4 input[type=text],
.form-style-4 input[type=text]
{
	background: transparent;
	border: none;
	border-bottom: 1px dashed #205a94;
	width: 275px;
	outline: none;
	padding: 0px 0px 0px 0px;
	font-style: italic;
}
.form-style-4 textarea{
	font-style: italic;
	padding: 0px 0px 0px 0px;
	background: transparent;
	outline: none;
	border: none;
	border-bottom: 1px dashed #205a94;
	width: 275px;
	overflow: hidden;
	resize:none;
	height:20px;
}

.form-style-4 textarea:focus,
.form-style-4 input[type=text]:focus,
.form-style-4 input[type=text]:focus,
.form-style-4 input[type=text] :focus
{
	border-bottom: 1px dashed #D9FFA9;
}

.form-style-4 input[type=submit],
.form-style-4 input[type=button]{
	background: #576E86;
	border: none;
	padding: 8px 10px 8px 10px;
	border-radius: 5px;
	color: #A8BACE;
}
.form-style-4 input[type=submit]:hover,
.form-style-4 input[type=button]:hover{
background: #394D61;
}
</style>

<script type="text/javascript">
//auto expand textarea
function adjust_textarea(h) {
    h.style.height = "20px";
    h.style.height = (h.scrollHeight)+"px";
}
</script>
<h1>Enter new shelter's info here:</h1>

<form class="form-style-4" action="/shelters" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <h2>Enter a new shelter:</h2>

  <label for="field1">
  <span>Shelter's name</span><input type="text" name="shelter[name]" required="true" />
  </label>

  <label for="field2">
  <span>Address</span><input type="text" name="shelter[address]" id="address" required="true" />
  </label>

  <label for="field3">
  <span>City</span><input type="text" name="shelter[city]" id="city" required="true" />
  </label>

  <label for="field4">
  <span>State</span><textarea name="shelter[state]" id="state" onkeyup="adjust_textarea(this)" required="true"></textarea>
  </label>

  <label for="field5">
  <span>Zip</span><textarea type="number" name="shelter[zip]" id ="zip" onkeyup="adjust_textarea(this)" required="true"></textarea>
  </label>
  <label>
  <span> </span><input type="submit" id="submit" value="submit" />
  </label>

</form>
